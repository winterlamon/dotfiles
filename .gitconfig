[alias]
	lg = log --oneline
	last = log -1 HEAD
	co = checkout
        cob = checkout -b
	s = status
	c = commit --verbose
	cam = commit --amend --verbose
	d = diff
	dc = diff --cached
        master = checkout master
	rim = rebase -i master
	rc = rebase --continue
	rab = rebase --abort
[core]
	commitGraph = true
	editor = code --wait
	excludesfile = ~/.gitignore_global
[credential]
	helper = store --file /opt/dev/var/private/git_credential_store
[diff]
	algorithm = patience
[fetch]
  prune = true
[gc]
	writeCommitGraph = true
[merge]
  ff = only
[protocol]
	version = 2
[pull]
	ff = only
[push]
	default = upstream
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[user]
	name = Winter LaMon
	email = winter.lamon@shopify.com
